FROM python:3.12-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

SHELL ["/bin/bash", "-o", "pipefail", "-c"]

RUN apt-get update && apt-get install -y --no-install-recommends build-essential curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY pyproject.toml /app/
RUN pip install -U pip && pip install "uv>=0.4.0" \
    && uv pip compile pyproject.toml --no-strip-extras --output-file requirements.txt \
    && uv pip install -r requirements.txt

COPY src /app/src
COPY sql /app/sql
ENV PYTHONPATH=/app/src
EXPOSE 8000
ENV MCP_HTTP_TOKEN=""
CMD ["python", "-m", "mcp_vertica.server", "--transport", "http", "--host", "0.0.0.0", "--port", "8000"]
