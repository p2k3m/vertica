FROM python:3.12-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

RUN apt-get update \ 
    && apt-get install -y --no-install-recommends \
        ca-certificates \
        curl \
        build-essential \ 
        jq \ 
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY pyproject.toml uv.lock /app/
RUN pip install --no-cache-dir uv \ 
    && uv sync --frozen --no-editable

COPY src /app/src
COPY sql /app/sql

RUN useradd --create-home app && chown -R app:app /app
USER app

ENV PYTHONPATH=/app/src:/app
EXPOSE 8000

HEALTHCHECK --interval=30s --timeout=3s --start-period=30s --retries=10 CMD curl -fsS http://127.0.0.1:8000/healthz || exit 1

CMD ["python", "-m", "mcp_vertica", "--transport", "http", "--port", "8000"]
